<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/rosaP"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lavanda"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tools:context=".TiposViolencia">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/text_Title_Violence"
            android:textAlignment="center"
            android:textColor="@color/moradoF"
            android:textSize="34sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/imgVIolencia"
            android:layout_width="match_parent"
            android:layout_height="254dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/violencia" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/label_descripcion_violencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-black"
            android:lineSpacingExtra="3dp"
            android:text="@string/text_description_violence"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/label_Tipos_Violencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/text_types_violence"
            android:textAlignment="center"
            android:textColor="@color/moradoF"
            android:textSize="25sp" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/label_violencia_fisica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/text_lab_physyc"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/degradado_tipos_violencia"
                android:padding="16dp"
                android:justificationMode="inter_word"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="@string/text_descripcion_phisyc" />

            <View
                android:layout_width="80dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/label_violencia_psicologica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/text_lab_psicologic"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".TiposViolencia">

            <View
                android:layout_width="80dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/label_descripcion_psicologica"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/degradado_violencia_psicologica"
                android:fontFamily="sans-serif-black"
                android:justificationMode="inter_word"
                android:layoutDirection="inherit"
                android:padding="16dp"
                android:text="@string/text_descripcion_phisyc"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textColorHint="#555555"
                android:textSize="20sp" />
        </LinearLayout> <!--Fin del layout de violencia psicologica-->

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/label_violencia_sexual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/text_lab_sexual"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/degradado_violencia_sexual"
                android:padding="16dp"
                android:justificationMode="inter_word"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="@string/text_descripcion_sexual" />

            <View
                android:layout_width="80dp"
                android:layout_height="match_parent" />
        </LinearLayout>


        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/label_violencia_economica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/text_lab_economic"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/layout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".TiposViolencia">

            <View
                android:layout_width="80dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/label_descripcion_economica"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/degradado_violencia_psicologica"
                android:fontFamily="sans-serif-black"
                android:justificationMode="inter_word"
                android:layoutDirection="inherit"
                android:padding="16dp"
                android:text="@string/text_descripcion_economic"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textColorHint="#555555"
                android:textSize="20sp" />
        </LinearLayout> <!--Fin del layout de violencia psicologica-->

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/label_violencia_digital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/text_lab_digital"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/degradado_tipos_violencia"
                android:padding="16dp"
                android:justificationMode="inter_word"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="@string/text_descripcion_digital" />

            <View
                android:layout_width="80dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!--Fin del layout de violencia Digital-->

        <View
            android:id="@+id/viewSimbolyc"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/label_violencia_simbolica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/text_lab_symbolic"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/layoutSymbolic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".TiposViolencia">

            <View
                android:layout_width="80dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/label_descripcion_simbolica"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/degradado_violencia_sexual"
                android:fontFamily="sans-serif-black"
                android:justificationMode="inter_word"
                android:layoutDirection="inherit"
                android:padding="16dp"
                android:text="@string/text_descripcion_symbolic"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textColorHint="#555555"
                android:textSize="20sp" />
        </LinearLayout> <!--Fin del layout de violencia Simbolica-->

        <Button
            android:id="@+id/botonRegresar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/rosaPastelMedio"
            android:onClick="back_types_violence"
            android:text="@string/button_back"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>